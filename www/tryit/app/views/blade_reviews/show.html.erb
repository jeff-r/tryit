<%- model_class = BladeReview -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Text:</strong></dt>
  <dd><%= @blade_review.text %></dd>
  <dt><strong>Date:</strong></dt>
  <dd><%= @blade_review.date %></dd>
  <dt><strong>Razor:</strong></dt>
  <dd><%= @blade_review.razor.name %></dd>
  <dt><strong>Blade:</strong></dt>
  <dd><%= @blade_review.blade.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              blade_reviews_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_blade_review_path(@blade_review), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              blade_review_path(@blade_review),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
