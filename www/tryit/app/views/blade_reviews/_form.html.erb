<%= form_for @blade_review, :html => { :class => "form-horizontal blade_review" } do |f| %>

    <% if @blade_review.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@blade_review.errors.count, "error") %> prohibited this blade_review from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @blade_review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text, :class => 'form-control' %>
    </div>
    <%= error_span(@blade_review[:text]) %>
  </div>

  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@blade_review[:date]) %>
  </div>

    <div class="control-group">
        <%= f.label :razor_id, :class => 'control-label' %>
        <div class="controls">
            <%= f.collection_select :razor_id, Razor.all.order(:name), :id, :name %>
        </div>
        <%= error_span(@blade_review[:razor_id]) %>
    </div>

    <div class="control-group">
        <%= f.label :blade_id, :class => 'control-label' %>
        <div class="controls">
            <%= f.collection_select :blade_id, Blade.all.order(:name), :id, :name %>
        </div>
        <%= error_span(@blade_review[:blade_id]) %>
    </div>

  <p>&nbsp;</p>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), blade_reviews_path, :class => 'btn btn-default' %>

<% end %>
